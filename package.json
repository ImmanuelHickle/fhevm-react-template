{
  "name": "fhevm-react-template",
  "version": "2.0.0",
  "description": "Universal FHEVM SDK for building confidential frontends - Framework agnostic, developer friendly",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run build:sdk",
    "build": "npm run build:sdk && npm run build:examples",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "build:examples": "npm run build:nextjs && npm run build:react && npm run build:vue",
    "build:nextjs": "cd examples/nextjs-app && npm run build",
    "build:react": "cd examples/react-app && npm run build",
    "build:vue": "cd examples/vue-app && npm run build",
    "dev": "npm run dev:nextjs",
    "dev:nextjs": "cd examples/nextjs-app && npm run dev",
    "dev:react": "cd examples/react-app && npm run dev",
    "dev:vue": "cd examples/vue-app && npm run dev",
    "dev:node": "cd examples/nodejs-app && npm start",
    "dev:vanilla": "cd examples/vanilla-app && npm start",
    "dev:court": "cd examples/court-investigation && npm start",
    "test": "npm run test:sdk && npm run test:examples",
    "test:sdk": "cd packages/fhevm-sdk && npm test",
    "test:examples": "npm run test:nextjs",
    "test:nextjs": "cd examples/nextjs-app && npm test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist",
    "deploy:nextjs": "cd examples/nextjs-app && vercel",
    "deploy:react": "cd examples/react-app && vercel",
    "deploy:vue": "cd examples/vue-app && vercel",
    "deploy:court": "cd examples/court-investigation && vercel"
  },
  "keywords": [
    "fhevm",
    "zama",
    "encryption",
    "privacy",
    "web3",
    "blockchain",
    "sdk",
    "react",
    "nextjs",
    "vue",
    "framework-agnostic"
  ],
  "author": "FHEVM SDK Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zama-ai/fhevm-react-template"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
